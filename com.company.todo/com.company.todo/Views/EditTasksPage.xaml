<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.company.todo.Views.EditTasksPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="{Binding SelectedTask.Imagen}"/>
                <Entry Text="{Binding SelectedTask.Content}"/>
                <Label Text="{Binding SelectedTask.Status}"/>
                <DatePicker Date="{Binding SelectedTask.CreatedAt}"/>
                <DatePicker Date="{Binding SelectedTask.UpdatedAt}"/>
                <Button Text="Update"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>