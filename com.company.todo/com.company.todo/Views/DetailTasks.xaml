<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.company.todo.Views.DetailTasks">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding SelectedTask.Imagen}"/>
            <Label Text="{Binding SelectedTask.Content}"/>
            <Label Text="{Binding SelectedTask.Status}"/>
            <Label Text="{Binding SelectedTask.CreatedAt}"/>
            <Label Text="{Binding SelectedTask.UpdatedAt}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>