<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:com.company.todo.Templates;assembly=com.company.todo"
             x:Class="com.company.todo.Views.DoneTasksPage"
             Title="My completed TODOs">
        <ContentPage.Content>
            <StackLayout>
            <SearchBar x:Name="SeachBarDoneTasks" 
                       SearchButtonPressed="SearchBar_OnSearchButtonPressed"
                       TextChanged="SearchBar_OnTextChanged"/>
            <Label Text="{Binding CountTask}"/>
                <ListView x:Name="ListViewTasks" ItemsSource="{Binding PendingTasks}" 
                      ItemTapped="Handle_ItemTapped" 
                      BackgroundColor="Transparent"
                      VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <templates:TasksTemplate/>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage.Content>
</ContentPage>