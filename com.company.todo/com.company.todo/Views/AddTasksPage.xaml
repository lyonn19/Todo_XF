<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.company.todo.Views.AddTasksPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Save" Text="Add" Command="{Binding AddTaskCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Content"/>
            <Entry Placeholder="Task Name" Text="{Binding Content}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>